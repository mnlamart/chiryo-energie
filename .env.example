# Base URL for the application
# Used for generating sitemap, robots.txt, and structured data
BASE_URL=https://chiryo-energie.sevend.io

# Allow search engine indexing
# Set to "true" to enable indexing, otherwise defaults to false
ALLOW_INDEXING=false

# Resend API key for sending emails
# Get your API key from https://resend.com
RESEND_API_KEY=your_resend_api_key_here

# Contact form email settings
CONTACT_EMAIL_FROM=contact@chiryo-energie.sevend.io
CONTACT_EMAIL_TO=contact@chiryo-energie.sevend.io

# Honeypot encryption seed for form spam protection
# Generate a random string for this value
HONEYPOT_ENCRYPTION_SEED=your_random_encryption_seed_here

# Node environment (usually set automatically)
# Options: development, production, test
NODE_ENV=production

# Server port (defaults to 3000 if not set)
PORT=3000
